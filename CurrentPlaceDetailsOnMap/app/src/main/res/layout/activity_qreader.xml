<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QReader">


    <TextView

        android:id="@+id/si"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp"
        android:text="Your friend already has a QR code?"
        android:textAlignment="center"
        android:textSize="15dp" />

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="@drawable/colorbutton"
        android:textColor="@android:color/white"
        android:text="Click here to scan it!" />

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        app:srcCompat="@android:color/darker_gray" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="Have your friend scan this QR code to share your location with them "
        android:textAlignment="center"
        android:textSize="15dp" />

    <Button
        android:id="@+id/generateButton"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/scan_btn"
        android:layout_alignStart="@+id/si"
        android:text="Button" />

</RelativeLayout>