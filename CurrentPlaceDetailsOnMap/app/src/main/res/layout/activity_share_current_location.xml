<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_share_current_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareCurrentLocation">


    <Button
        android:id="@+id/share_current"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/colorbutton"
        android:onClick="shareWithFriends"
        android:text="Share it Now"
        android:textColor="@drawable/white_color" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Select one Likely Place :"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/listView_choose_location"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray" />

    <ListView
        android:id="@+id/listView_choose_meetingPoint"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray"
        android:layout_marginBottom="81dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="211dp"
        android:text="MeetingPoints"
        android:textSize="25sp" />

</RelativeLayout>